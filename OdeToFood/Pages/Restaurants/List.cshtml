@page
@model OdeToFood.Pages.Restaurants.ListModel
@{
    ViewData["Title"] = "Restaurants";
}

<h1>@ViewData["Title"]</h1>

<form method="get">
    <div class="input-group mb-3">
        <input type="text" class="form-control" asp-for="SearchTerm">
        <button type="submit" class="btn btn-outline-secondary" type="button" id="button-addon2"><i class="glyphicon glyphicon-search"></i></button>
    </div>
</form>    

<table class="table">
    @foreach(var restaurant in Model.Restaurants)
    {
        <tr>
            <td>@restaurant.Name</td>
            <td>@restaurant.Location</td>
            <td>@restaurant.Cuisine</td>
            <td>
                <a class="btn"
                   asp-page="./Detail" asp-route-restaurantId="@restaurant.Id">
                    <i class="glyphicon glyphicon-zoom-in"></i>
                </a>
                <a class="btn"
                   asp-page="./Edit" asp-route-restaurantId="@restaurant.Id">
                    <i class="glyphicon glyphicon-edit"></i>
                </a>

            </td>
        </tr>
    }
</table>

<a asp-page=".\Edit" class="btn btn-outline-primary">Add New</a>